NAME=compiler
SRCFILES := $(wildcard *.c)
OBJFILES := $(patsubst %.c,%.o,$(notdir $(SRCFILES)))
CC=gcc
CFLAGS= -std=c99 -pedantic -Wall -Wextra -g

# Startovací pravidlo - pro přehlednost
all: $(NAME)

# vzorové pravidlo pro generování všech objektových souborů
%.o : %.c
	$(CC) $(CFLAGS) -c -o $@ $<


clean:
	rm -f *.o
	rm -f $(NAME)

test:
	./$(NAME) vita

# Generování závislostí
# při změně souborů spustíme 'make dep'
dep:
	$(CC) -MM *.c >dep.list

-include dep.list

# závěrečné slinkování
$(NAME): $(OBJFILES)
	$(CC) $(CFLAGS) $(OBJFILES) -o $@